<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2980B9"
    tools:context="com.t2f.train2fit.AppointmentDetailActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        card_view:cardCornerRadius="7dp">

    <ImageView
        android:id="@+id/profilePicIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/blank_profile"
        />

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/trainerNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_trainer_name"
        android:drawableLeft="@drawable/ic_trainer_name"
        android:drawablePadding="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_name" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/trainerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_train_type"
        android:drawableLeft="@drawable/ic_train_type"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_type" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_email" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/phnTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_phone"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:linksClickable="true"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_phone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_time"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_time" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_feedback"
        android:drawableLeft="@drawable/ic_feedback"
        android:drawablePadding="8dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/trainer_location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cnclBooking"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212F3D"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="Cancel" />

        <Button
            android:id="@+id/rescheduleBooking"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:background="#212F3D"
            android:text="Reschedule" />

    </LinearLayout>
</LinearLayout>
